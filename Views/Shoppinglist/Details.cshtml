@model ShoppinglistApp.Models.ShoppingListViewModel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Shoppinglist</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ListID)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ListID)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.ListName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.ListName)
		</dd>
		
			@foreach (ShoppinglistApp.Models.ShoppingListItem i in Model.Items)
			{
				<dd class="col-sm-10">
					@Html.Raw(i.ItemName)
				</dd>
			}


		</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model.ListID">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
